generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  password   String
  alamat     String
  role       String
  no_hp      String       @db.VarChar(12)
  image      String?
  pengiriman Pengiriman[]
}

model Wilayah {
  id         Int          @id @default(autoincrement())
  provinsi   String
  wilayah    String
  harga      Decimal
  pengiriman Pengiriman[]
}

model Ongkos {
  id         Int          @id @default(autoincrement())
  jemput     String
  harga      Decimal
  pengiriman Pengiriman[]
}

model Pengiriman {
  id         Int      @id @default(autoincrement())
  no_spb     String?  @unique @db.VarChar(10)
  customer   String?
  berat      Int
  koli       Int
  pembayaran String
  total      Decimal
  ket        String
  image      String?
  tanggal    DateTime @default(now())
  id_user    Int
  id_wilayah Int
  id_ongkos  Int?
  jemput     String?
  tujuan     String
  prioritas  String
  ongkos     Ongkos?  @relation(fields: [id_ongkos], references: [id])
  user       User     @relation(fields: [id_user], references: [id])
  wilayah    Wilayah  @relation(fields: [id_wilayah], references: [id])
  status     Status[]
}

model Status {
  id            Int        @id @default(autoincrement())
  image         String?
  spembayaran   String
  spengiriman   String
  tanggal       DateTime   @default(now())
  id_pengiriman Int
  laporan       Laporan[]
  pengiriman    Pengiriman @relation(fields: [id_pengiriman], references: [id])
}

model Laporan {
  id        Int      @id @default(autoincrement())
  tanggal   DateTime @default(now())
  bb        Decimal
  tkredit   Decimal
  tdebit    Decimal
  tbersih   Decimal
  id_status Int
  status    Status   @relation(fields: [id_status], references: [id])
}
